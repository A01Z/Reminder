<resources>

    <!-- Base application theme. -->
    <!-- Notes Light Theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_darkmode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_darkmode</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary_darkmode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_darkmode</item>
    </style>

    <!-- Notes Dark Theme -->
    <style name="DarkMode" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary_darkmode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_darkmode</item>
        <item name="colorAccent">@color/colorAccent_darkmode</item>
        <item name="android:windowBackground">@color/colorBackground_darkmode</item>
        <item name="android:colorBackground">@color/colorBackground_darkmode</item>
        <item name="android:textColor">@color/colorText_darkmode</item>
    </style>



    <!-- Dark/Night Mode theme. -->
    <style name="DarkTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#1C1D1F</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#272424</item>
        <item name="cardbackground">#272424</item>
        <item name="textcolor">#FFFFFF</item>
        <item name="tintcolor">#ffffff</item>
        <item name="buttoncolor">#2196F3</item>
        <item name="buttonTextColor">#FEFFFF</item>

    </style>

    <!-- Others -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





</resources>
